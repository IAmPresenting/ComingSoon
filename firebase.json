{
  "hosting": {
    "public": "./",
    "cleanUrls": true,
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "README.md",
      "firebase.json",
      ".firebaserc",
      ".git",
      ".gitignore",
      ".idea"
    ],
     "rewrites": [
      {
        "source": "/",
        "destination": "index.html"
      }
    ],
    "redirects": [
      {
        "source": "index.html",
        "destination": "/",
        "type": 301
      }
    ]
}
}
